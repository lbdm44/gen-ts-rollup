{
  "name": "gen-ts-rollup",
  "version": "0.0.0",
  "repository": "https://github.com/lbdm44/gen-ts-rollup.git",
  "author": "lbdm44 <lewis.miller.github@pm.me>",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist/",
    "types/"
  ],
  "scripts": {
    "build": "parcel build",
    "build:watch": "parcel watch",
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "vitest dev --config ./vitest.config.ts",
    "test:run": "vitest run --config ./vitest.config.ts",
    "test:coverage": "vitest coverage --config ./vitest.config.ts"
  },
  "dependencies": {
    "@babel/parser": "^7.17.3",
    "@babel/traverse": "^7.17.3",
    "debug": "^4.3.3",
    "fs-extra": "^10.0.1",
    "tmp": "^0.2.1",
    "walk-sync": "^3.0.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.3.2",
    "@parcel/transformer-typescript-types": "2.3.2",
    "@types/babel__traverse": "^7.14.2",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.21",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "parcel": "^2.3.2",
    "prettier": "2.5.1",
    "typescript": "^4.6.2",
    "vitest": "^0.6.0"
  },
  "targets": {
    "main": {
      "context": "node",
      "isLibrary": true
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.(j|t)s": "eslint --quiet"
  }
}
